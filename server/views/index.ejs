<body>
    <header>
        <img class = "header-image" src="/images/Header.jpg" alt="">
        <div>

    </div>
    </header>
    
    <main class="main-content">
        <div class="movie-selection">
            <div class="image-frame">
                <img class="attribute-image" data-image-role="image" src="<%= movie[0].link %>" alt="<%= movie[0].title %>">
                <div class="button-panel">
                    <button onclick="Generate()" class="generate-button" id="generate-button">Generate Movie</button>
                    <div class="dropdown">
                        <button onclick="showDropdownElements()" class="dropbtn">Select Genre</button>
                        <div id="myDropdown" class="dropdown-content">
                            <a href="#">Still working on this feature</a>
                            <!-- <a href="#">All</a>
                            <a href="#">Action</a>
